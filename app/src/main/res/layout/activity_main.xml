<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/little_grayish_black"
    tools:context=".MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/noteListRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:listitem="@layout/note_items"
        app:layout_constraintBottom_toTopOf="@+id/enterNoteLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/enterNoteLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grayish_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingBottom="5dp"
        tools:context=".MainActivity">

        <EditText
            android:id="@+id/noteEditText"
            android:layout_width="270dp"
            android:layout_height="48dp"
            android:hint="@string/enter_text_here"
            android:importantForAutofill="no"
            android:inputType="textMultiLine"
            android:textColorHint="#80CBC4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/addNoteButton"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/addNoteButton"
            android:layout_width="85dp"
            android:layout_height="48dp"
            android:text="@string/add"
            android:textColor="#C5E1A5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/noteEditText" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

